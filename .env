# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/senior_companion

# API Keys (Replace these with your actual keys)
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Twilio Configuration (for emergency notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Application Settings
DEBUG=True
SECRET_KEY=development_secret_key_change_in_production
PORT=5000

# Security Settings
RATE_LIMIT=100  # requests per minute
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Feature Flags
ENABLE_VOICE_INPUT=True
ENABLE_EMERGENCY_SERVICES=True
ENABLE_YOUTUBE_INTEGRATION=True
ENABLE_MAPS_INTEGRATION=True 